pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.9.8-eclipse-temurin-8-alpine' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:22-alpine3.19' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}